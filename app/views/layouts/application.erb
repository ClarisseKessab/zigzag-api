<!DOCTYPE html>
<html>
<head>
  <title>Zigzag</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
<%= javascript_include_tag "application", "data-turbo-track": "reload" %>

</head>
<body>
  <nav>
    <ul>
      <li><%= link_to "Accueil", root_path %></li>
      <li><%= link_to "Bars", bars_path %></li>

      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <li><%= link_to "Admin - Gérer les Bars", admin_bars_path %></li>
          <li><%= link_to "Admin - Gérer les Utilisateurs", admin_users_path %></li>
        <% end %>
        <li><%= link_to "Mon Compte", edit_user_registration_path %></li>
<%= button_to "Se déconnecter", destroy_user_session_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Es-tu sûr de vouloir te déconnecter ?" } %>
      <% else %>
        <li><%= link_to "Connexion", new_user_session_path %></li>
        <li><%= link_to "Inscription", new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>

  <div>
    <%= yield %>
  </div>
</body>
</html>
